{% extends "partials/base.html.twig" %}

{% block title %}Login{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
  <div class="row mt-5">
    <div class="col-md-6 mx-auto mt-5">
      <div class="card card-body bg-light">
        <h2>Login</h2>
        <p>Please fill in this form to log in</p>
        <form action="{{baseUrl}}/login" method="post">
          <div class="form-group">
            <label for="email">Email: <sup>*</sup></label>
            <input type="email" name="email" class="form-control form-control-lg" value="{{ data.email }}">
            <span class="alert">{{ data.email_err }}</span>
          </div>
          <div class="form-group">
            <label for="password">Password: <sup>*</sup></label>
            <input type="password" name="password" class="form-control form-control-lg" value="{{ data.password }}">
            <span class="alert">{{ data.password_err }}</span>
          </div>

          <div class="row">
            <div class="col">
              <input type="submit" value="Login" class="btn btn-success btn-block">
            </div>
            <div class="col">
              <a href="{{baseUrl }}/register" class="btn btn-dark btn-block">Don't have an account? Register</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
{% endblock %}