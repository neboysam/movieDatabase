{% extends "partials/base.html.twig" %}

{% block title %}Register User{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body bg-light mt-5">
        <h2>Create An Account</h2>
        <p>Please fill out this form to register with us</p>
        <form action="{{baseUrl}}/register" method="post">
          <div class="form-group">
            <label for="name">Name: <sup>*</sup></label>
            <input type="text" name="name" class="form-control form-control-lg" value="{{ data.name }}">
            <span class="alert">{{ data.name_err }}</span>
            
          </div>
          <div class="form-group">
            <label for="email">Email: <sup>*</sup></label>
            <input type="email" name="email" class="form-control form-control-lg" value="{{ data.email }}">
            <span class="alert">{{ data.email_err }}</span>
          </div>
          <div class="form-group">
            <label for="password">Password: <sup>*</sup></label>
            <input type="password" name="password" class="form-control form-control-lg" value="{{ data.password }}">
            <span class="alert">{{ data.password_err }}</span>
          </div>
          <div class="form-group">
            <label for="confirm_password">Confirm Password: <sup>*</sup></label>
            <input type="password" name="confirm_password" class="form-control form-control-lg" value="{{ data.confirm_password }}">
            <span class="alert">{{ data.confirm_password_err }}</span>
          </div>

          <div class="row">
            <div class="col">
              <input type="submit" value="Register" class="btn btn-success btn-block">
            </div>
            <div class="col">
              <a href="{{baseUrl }}/login" class="btn btn-dark btn-block">Have an account? Login</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
{% endblock %}